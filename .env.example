# AWS Configuration
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=us-east-1
S3_BUCKET_NAME=avatar-system-storage
CLOUDFRONT_DOMAIN=

# Database Configuration
DATABASE_URL=postgresql://avatar_user:change_this_password@postgres:5432/avatar_db
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=avatar_db
DATABASE_USER=avatar_user
DATABASE_PASSWORD=change_this_password

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379

# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Application Settings
SECRET_KEY=change-this-to-a-random-secret-key-in-production
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# LLM Configuration
LLM_PROVIDER=anthropic
LLM_MODEL=claude-sonnet-4-20250514
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# Avatar Engine
AVATAR_ENGINE=sadtalker
AVATAR_RESOLUTION=512

# STT Configuration
STT_PROVIDER=whisper
WHISPER_MODEL=base

# TTS Configuration
TTS_PROVIDER=coqui
TTS_VOICE=default

# Security
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
JWT_SECRET_KEY=change-this-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# WebSocket
WS_MAX_CONNECTIONS=1000
WS_PING_INTERVAL=30
WS_PING_TIMEOUT=10

# Celery
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# File Upload
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,webp

# Video Settings
VIDEO_FPS=25
VIDEO_CODEC=h264
VIDEO_BITRATE=2000k

# Monitoring
SENTRY_DSN=
PROMETHEUS_ENABLED=true

# Frontend URL
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
